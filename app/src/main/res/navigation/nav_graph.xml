<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/productFragment">
    <fragment android:id="@+id/productFragment" android:name="com.citycash.shop.ProductFragment"
              android:label="fragment_product" tools:layout="@layout/fragment_product">
        <action android:id="@+id/action_productFragment_to_productDetailFragment"
                app:destination="@id/productDetailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/productDetailFragment" android:name="com.citycash.shop.ProductDetailFragment"
              android:label="fragment_product_detail" tools:layout="@layout/fragment_product_detail">

        <action android:id="@+id/action_productDetailFragment_to_productFragment" app:destination="@id/productFragment"
                app:popUpTo="@id/productFragment" app:popUpToInclusive="true"
        />
        <argument android:name="productId" app:argType="string"/>
    </fragment>
    <fragment android:id="@+id/navActionFragment" android:name="com.citycash.shop.NavActionFragment"
              android:label="fragment_nav_action" tools:layout="@layout/fragment_nav_action">
        <action android:id="@+id/action_navActionFragment_to_productFragment" app:destination="@id/productFragment"
                app:popUpTo="@id/productFragment" app:popUpToInclusive="true"/>
        <argument android:name="navId" app:argType="integer"/>
    </fragment>


</navigation>